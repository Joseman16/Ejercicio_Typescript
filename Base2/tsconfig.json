{
  "compilerOptions": {
    // üåç Compatibilidad navegador
    "target": "ES6",
    "module": "ES6",

    // üîß Opciones de salida
    // "outDir": "./dist", // opcional si quieres compilar a otra carpeta
    "sourceMap": true,

    // üîí Chequeos estrictos
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    // Mejor compatibilidad con m√≥dulos
    "noImplicitAny": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true
  },
  "include": ["./"],           // Incluye todos los archivos TS en la ra√≠z
  "exclude": ["node_modules"]  // Ignora node_modules
}
